# Headless install
export DEBIAN_FRONTEND=noninteractive

# Update package manager and packages
sudo apt-get -qq update

# Update packages
sudo apt-get -o Dpkg::Options::="--force-confnew" --force-yes -fuy upgrade

# Install universal needs
sudo apt-get -y install \
    autoconf \
    automake \
    build-essential \
    curl \
    git \
    libtool \
    ntp \
    unzip

sudo cp $QUICKNESS_ETC/motd.tail /etc/motd.tail
