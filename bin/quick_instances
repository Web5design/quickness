#!/usr/bin/env python

import sys

import boto


conn = boto.connect_ec2()


# Make sure quickness machine exists and if it does give user 1 last chance to save it
instances = conn.get_all_instances()
for res in instances:
    for instance in res.instances:
        if instance.tags.has_key('Quickness'):
            if instance.public_dns_name:
                public_dns = ' (%s)' % instance.public_dns_name
            else:
                public_dns = ''
            print '%s [%s]: %s%s' % (instance.tags.get('Quickness'), instance.id, instance.state, public_dns)
