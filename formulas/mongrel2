###
### Settings
###

APP_VERSION="mongrel2-1.7.5"
MONGREL2_PREV_DIR=$PWD
cd $QUICKNESS_SRC


###
### Formula Dependencies
###

. $Q/evented_libs
. $Q/sqlite


###
### Mongrel2
###

if [ -d $APP_VERSION ]; then
    rm -rf ./$APP_VERSION
fi
if [ ! -f $APP_VERSION.tar.bz2 ]; then
    wget http://mongrel2.org/static/downloads/$APP_VERSION.tar.bz2
fi

tar jxf $APP_VERSION.tar.bz2
cd $APP_VERSION
make && sudo make install

cd $MONGREL2_PREV_DIR
