###
### Settings
###

PREV_DIR=$PWD
cd $QUICKNESS_SRC


###
### Formula Dependencies
###

$QUICKNESS_BIN/quick quick_install evented_libs
sudo apt-get -y install libpcre3 libpcre3-dev

###
### Formula Details
###

if [ -d nginx ]; then
    rm -rf ./nginx
fi

git clone https://github.com/git-mirror/nginx.git
cd nginx
./auto/configure --with-http_ssl_module --prefix=/usr/local
make && sudo make install

cd $PREV_DIR
