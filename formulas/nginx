###
### Settings
###
quickness_init "nginx"

APP_VERSION=nginx-1.2.0
NGINX_PREV_DIR=$PWD
cd $QUICKNESS_SRC


###
### Formula Dependencies
###

. $Q/evented_libs
. $Q/pcre


###
### Formula Details
###

if [ -d nginx ]; then
    rm -rf ./nginx
fi
if [ ! -f $APP_VERSION.tar.gz ]; then
    wget http://nginx.org/download/$APP_VERSION.tar.gz
fi

tar zxf $APP_VERSION.tar.gz
cd $APP_VERSION
./configure --with-http_ssl_module
make && sudo make install

sudo ln -s /usr/local/nginx/sbin/nginx /usr/local/bin/

quickness_msg $(cat <<EOF
### nginx
Server: sudo nginx
EOF)
quickness_teardown "nginx"

cd $NGINX_PREV_DIR
