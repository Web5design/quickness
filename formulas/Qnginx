###
### Settings
###

NGINX_PREV_DIR=$PWD
cd $QUICKNESS_SRC


###
### Formula Dependencies
###

. Qevented_libs
sudo apt-get -y install libpcre3 libpcre3-dev

###
### Formula Details
###

if [ -d nginx ]; then
    rm -rf ./nginx
fi

git clone https://github.com/git-mirror/nginx.git
cd nginx
./auto/configure --with-http_ssl_module --prefix=/usr/local
make && sudo make install

cd $NGINX_PREV_DIR
