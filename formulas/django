###
### Settings
###

DJANGO_PREV_DIR=$PWD
cd $QUICKNESS_SRC


###
### Formula Dependencies
###

. $Q/postgres
. $Q/python_dev
. $Q/python_imaging

if [ ! -f /etc/bash_completion.d/django_bash_completion ]; then
    sudo cp $QUICKNESS/etc/django_bash_completion /etc/bash_completion.d/
fi

mkvirtualenv django

pip install -r $QUICKNESS/etc/requirements.txt

cd $DJANGO_PREV_DIR
