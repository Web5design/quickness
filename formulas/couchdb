###
### CouchDB
###

###
### Initialize
###

is_formula_installed && return || formula_init

cd $QUICKNESS_SRC


###
### Dependencies
###

. $Q/erlang

sudo apt-get -y install \
    help2man \
    libcurl4-gnutls-dev \
    libicu-dev \
    libmozjs185-dev \
    libtool


###
### Installation
###

sudo adduser --system \
  --home /usr/local/var/lib/couchdb \
  --no-create-home \
  --shell /bin/bash \
  --group \
  --gecos "CouchDB Administrator" \
  couchdb

if [ -d $COUCHDB_DIRNAME ]; then
    rm -rf ./$COUCHDB_DIRNAME
fi
if [ ! -f $COUCHDB_FILENAME ]; then
    wget $COUCHDB_URL
fi

tar zxf $COUCHDB_FILENAME
cd $COUCHDB_DIRNAME
./configure && make && sudo make install

sudo chown -R couchdb:couchdb /usr/local/var/lib/couchdb
sudo chown -R couchdb:couchdb /usr/local/var/log/couchdb
sudo chown -R couchdb:couchdb /usr/local/var/run/couchdb
sudo chown -R couchdb:couchdb /usr/local/etc/couchdb

sudo su -l -c "couchdb -b" couchdb


###
### Teardown
###

formula_msg "Server: sudo su -l -c \"couchdb -b\" couchdb (it's already up though)"

formula_teardown
